#!/usr/bin/env php
<?php
/**
 * Loco SDK console
 */

set_time_limit(0);

require_once __DIR__.'/../vendor/autoload.php';

$application = new Loco\Console\Application;

$application->initRestService( __DIR__.'/../config.json' );

$application->add( new Loco\Console\Command\AuthVerifyCommand );

$application->run( new Symfony\Component\Console\Input\ArgvInput );
